<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupPublic"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRE NOW"
                android:textColor="@color/theme"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/logo_sign_up"/>


            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Username"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:textColorHint="#464646"
                android:background="@drawable/edittext_background"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Email"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:textColorHint="#464646"
                android:background="@drawable/edittext_background"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Mobile Number"
                android:ems="10"
                android:inputType="number|phone"
                android:paddingStart="20dp"
                android:textColorHint="#464646"
                android:background="@drawable/edittext_background"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Password"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:textColorHint="#464646"
                android:background="@drawable/edittext_background"
                android:paddingLeft="20dp" />


            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Confirme your password"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:textColorHint="#464646"
                android:background="@drawable/edittext_background"
                android:paddingLeft="20dp" />

            <Button
                android:id="@+id/btnSignupPublic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SignUp"
                android:background="@drawable/background_btn_main"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#464646"
                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>